{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		<div class="col-sm-3">
			<img src="{{ asset('img/discovery/' ~ discovery.image) }}" class="img-fluid" alt="">
		</div>
		<div class="col-sm-9">
			<h3>{{ discovery.name }}</h3>
			<p>{{ discovery.description }}</p>
			<hr>
			<p class="h6"><span class="font-weight-bold">Pays :</span> {{ discovery.country.name }}</p>
		</div>
	</div>
{% endblock %}







