{% extends 'base.html.twig' %}



{% block body %}
	<div class="row">
		<div class="col">
			{#<mark>{{ param }}</mark>#}

			{% include '_inc/flash.messages.html.twig' %}

			<div class="carousel slide" data-ride="carousel">
			  	<div class="carousel-inner">
			  		<div class="carousel-item active">
			    		<img class="d-block w-100" src="img/discovery/default.jpg" alt="default">
			    	</div>
					{% for discovery in results %}
						<div class="carousel-item">
				    		<img class="d-block w-100" src="{{ asset('img/discovery/' ~ discovery.image) }}" alt="{{ discovery.name }}">
				    	</div>
					{% endfor %}
				</div>
			</div>

			

		</div>
	</div>
{% endblock %}

